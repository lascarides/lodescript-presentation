= form_for @piece do |f|
  - if @piece.errors.any?
    #error_explanation
      %h2= "#{pluralize(@piece.errors.count, "error")} prohibited this piece from being saved:"
      %ul
        - @piece.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :organization
    = f.text_field :organization
  .field
    = f.label :predicate
    = f.text_field :predicate
  .field
    = f.label :thing
    = f.text_field :thing
  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :equivalent
    = f.text_field :equivalent
  .actions
    = f.submit 'Save'
